;
;  Example configuration file for fake
;  development/staging virtual sensors
;

[Controller]
class = controller.DefaultController
sensorHandlers = class-ref\{VirtualSensors}
sampleRate = 15.0
dataHandlers = class-ref\{AgraData}

; -- Transport --

[QueuedHttpPostTransport]
class=transport.http.QueuedHttpPostTransport
url = http://dev-services.bigsense.org/BigSense/api/Sensor.ltsense.xml
pause_rate = 1.0
timeout = 10.0
queue=class-ref\SQLiteQueue


[MemoryQueue]
class=queue.MemoryQueue

[SQLiteQueue]
class=queue.SQLiteQueue
dataFile=/tmp/localbuffer.db

; -- Data --

[AgraData]
class = data.AgraDataHandler
transports = class-ref\{QueuedHttpPostTransport}
identifier = class-ref\NamedIdentifier
security = class-ref\SignatureSecurity

[SignatureSecurity]
class = security.m2crypto.SignatureSecurity
dataDir = /tmp/ltsenseStaging

[NamedIdentifier]
class = identification.NamedIdentifier
id = SumitDev01 

; -- Sensor Handlers --

[VirtualSensors]
class = sensors.handlers.GeneralSensorHandler
sensors = class-ref\{VirtualTempSensor,VirtualVolume,VirtualFlow}

[VirtualTempSensor]
class = sensors.virtual.RandomSensor
id = SUMTEMP001
type = Temperature
units = C
rangeMin = 1
rangeMax = 25

[VirtualVolume]
class = sensors.virtual.IncrementingSensor
id= SUMVOL001
countDir = /tmp/ltsenseStaging
rangeMin = 0
rangeMax = 5
type = Volume
units = l

[VirtualFlow]
class = sensors.virtual.IncrementingSensor
id = SUMFLO001
countDir = /tmp/ltsenseStaging
rangeMin = 0
rangeMax = 8
type = FlowRate
units = l
float = True
floatPercision = 3

[VirtualImageSensor]
class = sensors.virtual.ImageSensor
id = VIMG044
imageFile = fake-water.jpg
