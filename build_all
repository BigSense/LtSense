#!/bin/sh

mkdir -p package/{deb-systemv,deb-upstart,rpm-systemd}

cd package/deb-upstart
DISTRO=Ubuntu fpm -f -t deb -s python --python-install-lib /usr/lib/python2.7/dist-packages --python-bin=$(which python2.7) --no-python-fix-name ../../setup.py
cd ../rpm-systemd
DISTRO=centos fpm -f -t rpm -s python --python-install-lib /usr/lib/python2.7/site-packages --python-bin=$(which python2.7) --no-python-fix-name ../../setup.py
cd ../deb-systemv
DISTRO=debian fpm -f -t deb -s python --python-install-lib /usr/lib/python2.7/dist-packages --python-bin=$(which python2.7) --no-python-fix-name ../../setup.py
