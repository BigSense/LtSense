[Controller]
class = controller.DefaultController
sensor_handlers = class-ref\{OneWireSensors,InformationSensors}
sample_rate = float\3
data_handlers = class-ref\{SQLiteData,GreenOvenData}

[SQLiteData]
class = data.SQLiteDataHandler
file = string\data.sqlite
 
[OneWireSensors]
class = sensors.OneWireSensorHandler
owfs_mount = string\/var/lib/owfs/mnt

[GreenOvenData]
class = data.GreenOvenDataHandler
endpoint = string\http://example.com/api

[InformationSensors]
class = sensors.GeneralSensorHandler
sensors = class-ref\{MacAddressSensor,StaticGPSSensor}

[MacAddressSensor]
class = sensors.MacAddressIdentificationSensor

[StaticGPSSensor]
class = sensors.StaticInformationSensor
id = string\XX
type = string\GPS
data = string\120.456,120.456
units = string\cord
