[Controller]
class = controller.DefaultController
sensorHandlers = class-ref\{OneWireSensors}
sampleRate = 3.0
dataHandlers = class-ref\{GreenOvenData}

; -- Transport --

[QueuedHttpPostTransport]
class=transport.QueuedHttpPostTransport
url = http://192.168.42.101:8080/greenoven/api/Sensor.go.xml
pause_rate = 0.010

; -- Data --

[GreenOvenData]
class = data.GreenOvenDataHandler
transports = class-ref\{QueuedHttpPostTransport}
adapter = eth0

;[SQLiteData]
;class = data.SQLiteDataHandler
;dataFile = data.sqlite

; -- Sensor Handlers --

[OneWireSensors]
class = sensors.OneWireSensorHandler
owfsMount = /var/lib/owfs/mnt

;[InformationSensors]
;class = sensors.GeneralSensorHandler
;sensors = class-ref\{MacAddressSensor,StaticGPSSensor}

